@model IEnumerable<Programacion8vo.Models.clienteModel>
@{
       Layout = "~/Views/Shared/_Layout.cshtml";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Clientes</title>
</head>
<body>
    <p>
        <a asp-action="Create">Nuevo Cliente</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Id Ciudad
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    Documento
                </th>
                <th>
                    Telefono
                </th>
                <th>
                    Email
                </th>
                <th>
                    FechaNacimiento
                </th>
                <th>
                    Ciudad
                </th>
                <th>
                    Nacionalidad
                </th>
                 <th>
                    Edit
                </th>
                 <th>
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model){
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem =>cliente.Id )
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem =>cliente.IdCiudad )
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem =>cliente.Nombre )
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem =>cliente.Apellido )
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem =>cliente.Documento )
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem =>cliente.Telefono )
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem =>cliente.Email )
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem =>cliente.FechaNacimiento )
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem =>cliente.Ciudad )
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem =>cliente.Nacionalidad )
                    </td>
                     <td>
                        <input asp-route="Edit" type="submit" value="Editar"/>
                    </td>
                     <td>
                        <input asp-route="Delete" type="submit" value="Eliminar"/>
                    </td>
                </tr>
            
                
            }
        </tbody>
    </table>
    
</body>
</html>